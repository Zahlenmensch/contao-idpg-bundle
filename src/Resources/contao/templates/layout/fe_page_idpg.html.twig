{#
  Custom Layout Template: fe_page_idpg.html.twig
  ----------------------------------------------
  Extends Contao's default layout and injects:
  - favicon definitions
  - Matomo tracking
  - custom CSS from /files/theme/css
#}

{% extends '@Contao/layout/default.html.twig' %}

{% block head %}
  {{ parent() }}

  {# Include favicon definitions for all platforms #}
  {{ 'meta_faviconset_idpg' | include }}

  {# Include Matomo tracking script (cookieless, GDPR-compliant) #}
  {{ 'track_matomo_idpg' | include }}

  {# Include custom CSS from theme folder #}
  <link rel="stylesheet" href="{{ asset('files/theme/css/main.css') }}">
{% endblock %}

{% block layout %}
  {{ parent() }}
{% endblock %}